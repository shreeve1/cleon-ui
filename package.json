{
  "name": "cleon-ui",
  "version": "1.0.0",
  "description": "Cleon UI - Lightweight mobile-first web interface for Claude Code with retro neon aesthetics",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "node --watch server/index.js",
    "pm2": "pm2 delete cleon-ui 2>/dev/null; pm2 start server/index.js --name cleon-ui",
    "pm2:stop": "pm2 stop cleon-ui",
    "pm2:logs": "pm2 logs cleon-ui",
    "test": "vitest run"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.29",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "glob": "^13.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pdf-parse": "^2.4.5",
    "puppeteer": "^24.37.3",
    "winston": "^3.19.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "playwright": "^1.58.2",
    "vitest": "^4.0.18"
  }
}
